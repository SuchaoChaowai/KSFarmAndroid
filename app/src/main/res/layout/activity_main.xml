<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="4dp"
    android:id="@+id/constraintLayout"
    tools:context=".activity.MainActivity">

    <com.google.android.material.switchmaterial.SwitchMaterial
        android:id="@+id/switchHatariFan"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:switchPadding="8dp"
        android:text="@string/hatari_fan"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="@+id/switchStandingDeskLamp"
        app:layout_constraintTop_toBottomOf="@+id/switchStandingDeskLamp" />

    <com.google.android.material.switchmaterial.SwitchMaterial
        android:id="@+id/switchAirCon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:switchPadding="8dp"
        android:text="@string/air_con"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="@+id/switchOverHeadDeskLamp"
        app:layout_constraintTop_toBottomOf="@+id/hr2" />

    <View
        android:id="@+id/hr2"
        android:layout_width="0dp"
        android:layout_height="1dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:background="#000000"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/switchOverHeadDeskLamp" />

    <com.google.android.material.switchmaterial.SwitchMaterial
        android:id="@+id/switchDeskLamp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:switchPadding="8dp"
        android:text="@string/desk_lamp"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="@+id/switchHatariFan"
        app:layout_constraintTop_toBottomOf="@+id/switchHatariFan" />

    <com.google.android.material.switchmaterial.SwitchMaterial
        android:id="@+id/switchOverHeadDeskLamp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:switchPadding="8dp"
        android:text="@string/desk_overhead_lamp"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="@+id/switchDeskLamp"
        app:layout_constraintTop_toBottomOf="@+id/switchDeskLamp" />

    <com.google.android.material.switchmaterial.SwitchMaterial
        android:id="@+id/switchStandingDeskLamp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:switchPadding="8dp"
        android:text="@string/standing_desk_lamp"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="@+id/switchBedSideLamp"
        app:layout_constraintTop_toBottomOf="@+id/switchBedSideLamp" />

    <TextView
        android:id="@+id/textViewPressure"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="@string/pressure"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="@+id/textViewHumid"
        app:layout_constraintTop_toBottomOf="@+id/textViewHumid" />

    <TextView
        android:id="@+id/textViewLastUpdate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="16dp"
        android:text="@string/last_update"
        android:textSize="12sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/textViewKSFarmWeatherLabel" />

    <TextView
        android:id="@+id/textViewTemp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="24dp"
        android:text="@string/temp"
        android:textSize="16sp"
        app:layout_constraintBottom_toBottomOf="@+id/textViewTempLabel"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textViewKSFarmWeatherLabel" />

    <TextView
        android:id="@+id/textViewHumid"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="@string/humid"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="@+id/textViewTemp"
        app:layout_constraintTop_toBottomOf="@+id/textViewTemp" />

    <TextView
        android:id="@+id/textViewKSFarmWeatherLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:text="@string/ks_farm_weather_label"
        android:textSize="20sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textViewTempLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="8dp"
        android:text="@string/temp"
        android:textSize="16sp"
        app:layout_constraintStart_toStartOf="@+id/textViewKSFarmWeatherLabel"
        app:layout_constraintTop_toBottomOf="@+id/textViewKSFarmWeatherLabel" />

    <TextView
        android:id="@+id/textViewHumidLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="@string/humid"
        android:textSize="16sp"
        app:layout_constraintStart_toStartOf="@+id/textViewTempLabel"
        app:layout_constraintTop_toBottomOf="@+id/textViewTempLabel" />

    <TextView
        android:id="@+id/textViewPressureLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="@string/pressure"
        android:textSize="16sp"
        app:layout_constraintStart_toStartOf="@+id/textViewHumidLabel"
        app:layout_constraintTop_toBottomOf="@+id/textViewHumidLabel" />

    <View
        android:id="@+id/hr6"
        android:layout_width="0dp"
        android:layout_height="1dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:background="#000000"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textViewPressureLabel" />

    <View
        android:id="@+id/hr"
        android:layout_width="0dp"
        android:layout_height="1dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="8dp"
        android:background="#000000"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/switchAirCon" />

    <com.google.android.material.switchmaterial.SwitchMaterial
        android:id="@+id/switchBedSideLamp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:layout_marginEnd="16dp"
        android:switchPadding="8dp"
        android:text="@string/bed_side_lamp"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/hr6" />

</androidx.constraintlayout.widget.ConstraintLayout>